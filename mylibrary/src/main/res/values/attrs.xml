<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--刷新-->
    <declare-styleable name="PtrFrameLayout">
        <attr name="ptr_header" format="reference" />
        <attr name="ptr_content" format="reference" />
        <attr name="ptr_resistance" format="float" />
        <attr name="ptr_ratio_of_header_height_to_refresh" format="float" />
        <attr name="ptr_duration_to_close" format="integer" />
        <attr name="ptr_duration_to_close_header" format="integer" />
        <attr name="ptr_pull_to_fresh" format="boolean" />
        <attr name="ptr_keep_header_when_refresh" format="boolean" />
    </declare-styleable>
    <declare-styleable name="PtrClassicHeader">
        <attr name="ptr_rotate_ani_time" format="integer" />
    </declare-styleable>

    <!--滑动关闭activity-->
    <declare-styleable name="SliderStyle">
        <attr name="position">
            <enum name="left" value="1" />
            <enum name="right" value="2" />
            <enum name="top" value="4" />
            <enum name="bottom" value="8" />
            <enum name="horizontal" value="3" />
            <enum name="vertical" value="12" />
            <enum name="all" value="15" />
        </attr>
        <attr name="edgeOnly" format="boolean" />
        <attr name="edgePercent" format="float" />
        <attr name="scrimColor" format="color|reference" />
        <attr name="scrimStartAlpha" format="float" />
        <attr name="scrimEndAlpha" format="float" />
        <attr name="velocityThreshold" format="float" />
        <attr name="distanceThresholdPercent" format="float" />
        <attr name="slideEnter" format="boolean" />
        <attr name="slideExit" format="boolean" />
        <attr name="sensitivity" format="float" />
        <attr name="primaryColor" format="color|reference" />
        <attr name="secondaryColor" format="color|reference" />
    </declare-styleable>

</resources>